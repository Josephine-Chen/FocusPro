//Tutorial: https://robots.thoughtbot.com/how-to-make-a-chrome-extension
{
  "manifest_version": 2,
  "name": "FocusPro Extension",
  "version": "0.1",
  "description": "Website time tracker and companion to FocusPro web app",
  "homepage_url": "http://focuspro.herokuapp.com/",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
          "tabs",
          "activeTab",
          "history",
          "storage",
          "unlimitedStorage",
          "webNavigation",
          "idle",
          "alarms"
        ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.1.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}